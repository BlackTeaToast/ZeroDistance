<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yoyoyee.zerodistance" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.StudentRegisterActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".activity.TeacherRegisterActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".activity.TestActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity android:name=".activity.GroupActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.MissionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NewMissionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.AchievementActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NewGroupActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.QAActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.TurnActivity"
            android:screenOrientation="portrait"/>
        <!--<activity android:name=".activity.fragmentActivity" />-->
        <activity
            android:name=".activity.RegisterSelectActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.AskActivity"
            android:screenOrientation="portrait"></activity>
             <service android:name=".app.TapService"></service>
    </application>

</manifest>
