<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:padding="5dp"
        android:rowCount="3"
        android:columnCount="3"
        android:clickable="false"
        android:columnOrderPreserved="false"
        android:contextClickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:touchscreenBlocksFocus="false"
        android:useDefaultMargins="true"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="153dp"
                android:layout_height="70dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/missionName"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button10"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <TextView
                android:layout_width="134dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="打屁屁"
                android:id="@+id/missionDetial"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="2"
                android:autoText="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="372dp"
                android:layout_height="74dp"
                android:layout_column="2"
                android:layout_row="0"
                android:baselineAligned="false"
                android:clickable="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/date"
                            android:id="@+id/dateread"
                            android:layout_gravity="top|left"
                            style="@style/cardtext"/>

                        <TextView
                            android:layout_width="66dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="3/30"
                            android:id="@+id/datetime"
                            android:layout_column="1"
                            android:layout_row="0"
                            android:layout_rowWeight="0"
                            android:layout_rowSpan="1"
                            android:layout_gravity="top|left"
                            android:allowUndo="false"
                            android:clickable="false"
                            android:gravity="center_vertical"
                            style="@style/cardtext" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="112dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/time"
                            android:id="@+id/timeread"
                            android:layout_gravity="left"
                            style="@style/cardtext" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="06:20"
                            android:id="@+id/textView2"
                            style="@style/cardtext"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/missiondangerous"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_rowWeight="0"
                    android:background="@android:drawable/star_big_on"
                    android:layout_rowSpan="1"
                    android:layout_gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_columnSpan="3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/missionnumber"
                        android:layout_gravity="right"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/peoplenumber"
                        android:id="@+id/peopleNumberread"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_rowWeight="2"
                        android:layout_rowSpan="2"
                        android:layout_gravity="left"
                        style="@style/cardtext"/>

                    <TextView
                        android:layout_width="123dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="4/10"
                        android:id="@+id/peoplenumber"
                        android:gravity="right"
                        style="@style/cardtext"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>