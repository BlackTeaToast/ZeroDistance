<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:CardView="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp"
    android:id="@+id/CardView"
    CardView:cardBackgroundColor="#8FFFFFFF">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="2dp">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:id="@+id/fr_fr_mi">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_margin="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2016/01/01 12:00"
                    android:id="@+id/datetime"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    style="@style/cardtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="人數：4/10"
                    android:id="@+id/peoplenumber"
                    android:gravity="right"
                    android:layout_column="3"
                    android:layout_row="3"
                    android:textColor="#ca0def"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="幫忙解決維他命"
                    android:id="@+id/missionName"
                    android:textSize="25dp"
                    android:textColor="#366fe9"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="燒酒螺"
                    android:id="@+id/PoName"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/missionDetial"
                    android:background="#9cffffff"
                    android:minLines="2"
                    android:text="有一天，有許多維他命跑出來了，那些維他命，賣的又貴又難吃。"
                    android:maxLines="2"
                    android:textSize="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/missiondangerous"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:src="@drawable/ic_report_problem_black_48dp"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
    <Space
        android:layout_width="20px"
        android:layout_height="300px"
        android:id="@+id/space"
        android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>