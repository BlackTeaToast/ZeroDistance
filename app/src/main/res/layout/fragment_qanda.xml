<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:columnCount="3"
        android:rowCount="6"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="false">

        <TextView
            android:layout_width="103dp"
            android:layout_height="45dp"
            android:layout_column="0"
            android:id="@+id/q_Q_Title"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:text="Q"
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="名字"
            android:id="@+id/q_Qname"
            android:layout_gravity="bottom|right"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginRight="5dp"
            android:layout_columnWeight="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="時間"
            android:id="@+id/q_Qtime"
            android:layout_gravity="right"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_marginRight="5dp"
            android:layout_columnWeight="4" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="內容"
            android:id="@+id/q_Qcontent"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3" />




    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:columnCount="31"
        android:rowCount="6"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="false">


        <TextView
            android:layout_width="103dp"
            android:layout_height="45dp"
            android:layout_column="0"
            android:id="@+id/a_A_Title"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:text="A"
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="名字"
            android:id="@+id/a_Aname"
            android:layout_gravity="bottom|right"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginRight="5dp"
            android:layout_columnSpan="29" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="時間"
            android:id="@+id/a_Atime"
            android:layout_gravity="right"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_marginRight="5dp"
            android:layout_columnSpan="29" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="內容"
            android:id="@+id/a_Acontent"
            android:layout_row="5"
            android:layout_column="0" />

    </GridLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>