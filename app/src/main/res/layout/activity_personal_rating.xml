<?xml version="1.0" encoding="utf-8"?>

<!--拿來上傳更改用 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView3"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    tools:context = ".activity.GroupActivity"
    android:background="@drawable/repeat_cube_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MainVer"
        android:weightSum="1">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/personalRecyclerView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonLinearLayout"
            android:weightSum="1"
            android:layout_marginTop="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:id="@+id/finishButtonForPersonalRating"
                android:textSize="20dp"
                android:textColor="#114462"
                android:background="@drawable/new_mission_overbuttom2"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.11"
                android:layout_columnSpan="2"
                android:visibility="visible"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>






