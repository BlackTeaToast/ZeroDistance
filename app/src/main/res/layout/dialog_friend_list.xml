<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/frame"
        android:layout_above="@+id/linearLayout6">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/friendList" />
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout6">


        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#00000000"
            android:id="@+id/theOPline"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/newfri"
                android:id="@+id/newfir"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_glossy"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/searchoth"
                android:id="@+id/otherpeo"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_glossy"
                android:layout_marginBottom="5dp" />

            <Space
                android:layout_width="20px"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@android:string/cancel"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_glossy"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>