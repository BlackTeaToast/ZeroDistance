<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yoyoyee.zerodistance.activity.NewGroupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.57">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/missionname_new_group"
                    android:layout_column="0"
                    android:textSize="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView2"
                    android:layout_row="0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/editTextMission" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="緊急程度："
                        android:id="@+id/justView"
                        android:layout_row="25"
                        android:layout_column="2"
                        android:textSize="24dp"
                        android:layout_below="@+id/editTextMissonName"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerNewGroupActPressing"
                        android:spinnerMode="dropdown"
                        android:layout_row="20"
                        android:layout_column="3"
                        android:layout_alignTop="@+id/justView"
                        android:layout_toRightOf="@+id/justView"
                        android:layout_toEndOf="@+id/justView"
                        android:layout_weight="1"
                        android:entries="@array/press_new_group"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="獎勵："
                        android:id="@+id/justView2"
                        android:layout_row="25"
                        android:layout_column="2"
                        android:textSize="24dp"
                        android:layout_below="@+id/spinnerNewGroupActPressing"
                        android:layout_toLeftOf="@+id/spinnerNewGroupActPressing"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerNewGroupActPay"
                        android:spinnerMode="dropdown"
                        android:layout_row="20"
                        android:layout_column="3"
                        android:layout_below="@+id/spinnerNewGroupActPressing"
                        android:layout_alignLeft="@+id/spinnerNewGroupActPressing"
                        android:layout_alignStart="@+id/spinnerNewGroupActPressing"
                        android:layout_weight="1"
                        android:entries="@array/pay_new_group"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="選取日期："
                        android:id="@+id/textViewDate"
                        android:layout_row="25"
                        android:layout_column="2"
                        android:textSize="24dp"
                        android:layout_below="@+id/spinnerNewGroupActPressing"
                        android:layout_toLeftOf="@+id/spinnerNewGroupActPressing"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="日期"
                        android:id="@+id/textViewDatePick"
                        android:layout_row="25"
                        android:layout_column="3"
                        android:textSize="24dp"
                        android:layout_below="@+id/spinnerNewGroupActPressing"
                        android:layout_toLeftOf="@+id/spinnerNewGroupActPressing"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="onClickDate" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="到期時間"
                        android:id="@+id/textViewTimePick"
                        android:layout_row="25"
                        android:layout_column="3"
                        android:textSize="24dp"
                        android:layout_below="@+id/spinnerNewGroupActPressing"
                        android:layout_toLeftOf="@+id/spinnerNewGroupActPressing"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_horizontal"
                        android:onClick="onClickTime" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/Display" />

    </LinearLayout>

</ScrollView>
