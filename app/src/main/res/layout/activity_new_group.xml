<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yoyoyee.zerodistance.activity.NewGroupActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="14"
        android:rowCount="101">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/missionname_new_mission"
            android:layout_column="0"
            android:textSize="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewName"
            android:layout_row="2"
            android:layout_columnSpan="7"
            android:layout_gravity="left|center"
            android:layout_margin="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_row="2"
            android:layout_column="7"
            android:layout_gravity="center|right"
            android:layout_marginTop="40dp"
            android:layout_columnSpan="7"
            android:layout_marginRight="15dp"
            android:layout_margin="0dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="緊急程度："
            android:id="@+id/textViewPress"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="24dp"
            android:layout_below="@+id/editTextMissonName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|center"
            android:layout_columnSpan="7"
            android:layout_margin="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <Spinner
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:id="@+id/spinnerPress"
            android:spinnerMode="dropdown"
            android:layout_row="3"
            android:layout_column="7"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_weight="1"
            android:entries="@array/press_new_mission"
            android:layout_columnSpan="7"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_margin="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="獎勵："
            android:id="@+id/textViewPay"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="24dp"
            android:layout_below="@+id/spinner"
            android:layout_toLeftOf="@+id/spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|center"
            android:layout_columnSpan="7"
            android:layout_margin="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <Spinner
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:id="@+id/spinnerPay"
            android:spinnerMode="dropdown"
            android:layout_row="4"
            android:layout_column="7"
            android:layout_below="@+id/spinner"
            android:layout_alignLeft="@+id/spinner"
            android:layout_alignStart="@+id/spinner"
            android:layout_weight="1"
            android:entries="@array/pay_new_mission"
            android:layout_columnSpan="7"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextOtherPay"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="14"
            android:layout_gravity="center"
            android:layout_margin="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="任務日期："
            android:id="@+id/textViewMissionDate"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="24dp"
            android:layout_below="@+id/spinner"
            android:layout_toLeftOf="@+id/spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|center"
            android:layout_columnSpan="14"
            android:layout_margin="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:id="@+id/buttonDate"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_columnSpan="7"
            android:onClick="onClickDate"
            android:layout_margin="0dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="時間"
            android:id="@+id/buttonTime"
            android:layout_column="7"
            android:layout_row="7"
            android:onClick="onClickTime"
            android:layout_gravity="center|right"
            android:layout_columnSpan="7"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="任務內容："
            android:id="@+id/textViewContent"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="24dp"
            android:layout_below="@+id/spinner"
            android:layout_toLeftOf="@+id/spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_columnSpan="14"
            android:layout_gravity="left|center"
            android:layout_margin="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextContent"
            android:layout_column="0"
            android:layout_row="9"
            android:layout_columnSpan="14"
            android:layout_gravity="center"
            android:layout_margin="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="選擇圖像"
            android:id="@+id/textViewPicture"
            android:layout_row="10"
            android:layout_column="0"
            android:textSize="24dp"
            android:layout_below="@+id/spinner"
            android:layout_toLeftOf="@+id/spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_columnSpan="14"
            android:layout_gravity="left|center"
            android:layout_margin="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="從檔案選取"
            android:id="@+id/buttonPicture"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_row="11"
            android:layout_margin="0dp"
            android:layout_gravity="left|center"
            android:layout_marginTop="15dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:id="@+id/buttonTakePicture"
            android:layout_column="7"
            android:layout_row="11"
            android:onClick="useCamera"
            android:layout_gravity="center|right"
            android:layout_columnSpan="7"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/printf"
            android:layout_row="99"
            android:layout_column="1"
            android:layout_columnSpan="11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/printf2"
            android:layout_row="98"
            android:layout_column="1"
            android:layout_columnSpan="11" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPicture"
            android:layout_column="0"
            android:layout_columnSpan="14"
            android:layout_row="12"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:longClickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="發送"
            android:id="@+id/buttonOK"
            android:layout_margin="0dp"
            android:layout_gravity="left|center|fill_vertical"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_row="100"
            android:layout_marginTop="15dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/buttonCancel"
            android:layout_column="7"
            android:layout_row="100"
            android:layout_margin="0dp"
            android:layout_gravity="center|fill_vertical|right"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_columnSpan="7" />

    </GridLayout>

</ScrollView>
